<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:context="com.example.android.sunshine.RecipesActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22dp"
        app:cardCornerRadius="10dp"
        android:elevation="22dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/tv_recipe_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:paddingTop="22dp"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:maxLines="4"
                    android:minLines="1"
                    android:ellipsize="end"
                    android:visibility="visible"
                    tools:text="Buffalo Chicken Salad" />

                <TextView
                    android:id="@+id/tv_used_ingredients_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:visibility="visible"
                    tools:text="25 minutes" />

                <TextView
                    android:id="@+id/tv_missed_ingredients_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="22dp"
                    android:visibility="visible"
                    tools:text="25 minutes" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_recipe_pic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:paddingLeft="22dp"
                android:scaleType="centerCrop"
                android:visibility="visible" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
